<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#6666FF</item>
        <item name="colorPrimaryDark">#1111AA</item>
        <item name="colorAccent">#999933</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:textColor">#111144</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:colorBackground">#F4F4D4</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ListTheme">
    </style>

    <style name="ActionbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="ListItemTitle" parent="ListTheme">
        <item name="android:textSize">15dp</item>
    </style>
    <style name="ListItemSub" parent="ListTheme">
        <item name="android:textSize">12dp</item>
    </style>
    <style name="StreamlistItemTitle">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StreamlistItemSpinning">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="StreamlistItemPlaying">
        <item name="android:textSize">13dp</item>
    </style>
    <style name="StreamCreator">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#55000000</item>
    </style>
    <style name="StreamDesc">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="StreamSpinning">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="PlayingTitle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#BBDDFF</item>
    </style>
    <style name="PlayingArtist">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#B0D0F0</item>
    </style>
    <style name="tinyHeader">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#55000000</item>
    </style>
    <style name="tinyHeaderContrast">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">14</item>
    </style>
    <style name="iconLabel">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#99FFFFFF</item>
    </style>
    <style name="floatingButtonLabel">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">14</item>
    </style>
    <style name="trackExploreButton">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="editTextStyle">

    </style>

</resources>
